---
layout: default
---

<article class="max-w-5xl mx-auto" id="detailsProjet">
    <header class="mb-14">

        <h1 class="text-4xl text-center font-bold text-gray-900 mt-0">{{ title }}</h1>
        <div class="text-center">Réalisé en {{ page.date | readableDate }}</div>
        {% if tags %}
        <div class="mt-3 text-center">
            {% for tag in tags %}
            <a href="{{ '/tags/' | url }}{{ tag }}"
                class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-medium text-gray-700 m-0.5">#{{ tag
                }}</a>
            {% endfor %}
        </div>
        {% endif %}
        {% if thumb %}
        <div class="mt-10 -mx-7 md:mx-0">
            <img class="w-full max-w-2xl mx-auto overflow-hidden shadow-md rounded-lg" src="{{ thumb | url }}"
                alt="This project thumbnail">
        </div>
        {% endif %}
    </header>

    <section class="m-0-auto">
        <div id="content" class="prose m-4 sm:max-w-6xl sm:m-12 text-gray-800 ">
            {{ content | safe }}
        </div>
    </section>




    {% if site.disqusShortname %}

    <div class="mt-10">
        {% if process.environment === "production" %}
        {% include "partials/disqus.njk" %}
        {% else %}
        <div class="italic text-gray-700">Disqus comments only available for production</div>
        {% endif %}
    </div>
    {% endif %}

</article>

<div class="flex flex-wrap -mx-2">
    {% include "partials/cta.njk" %}
</div>

<script defer src="https://unpkg.com/img-comparison-slider@7/dist/index.js"></script>
<link rel="stylesheet" href="https://unpkg.com/img-comparison-slider@7/dist/styles.css" />

<style type="text/css">
    img-comparison-slider {
        --divider-width: 3px;

    }

    .coloured-slider {
        --divider-color: #272727;
        --default-handle-opacity: 1;
        --default-handle-color: rgba(19, 19, 19, 0);
    }

    .slider-example-focus:focus {
        outline: none;
    }

    .slider-example-relative-size {
        --default-handle-width: clamp(40px, 10vw, 200px);
    }
</style>