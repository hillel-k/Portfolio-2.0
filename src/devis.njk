      }
    }
    formSteps[currentStep + 1].style.display = "block";
  }

  // Fonction pour revenir à l'étape précédente
  function prevStep() {
    let currentStep = 0;
    for (let i = 0; i < formSteps.length; i++) {
      if (formSteps[i].style.display === "block") {
        currentStep = i;
        formSteps[i].style.display = "none";
      }
    }
    formSteps[currentStep - 1].style.display = "block";
