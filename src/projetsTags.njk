---
layout: default
eleventyExcludeFromCollections: true
pagination:
    data: collections.pagedProjetsByTag
    size: 1
    alias: paged
permalink: "tagProjet/{{ paged.tagProjet }}/{% if paged.number > 1 %}{{ paged.number }}/{% endif %}index.html"
eleventyComputed:
    title: "Tagged with \"{{ paged.tagProjet | capitalize }}\""
---

<div class="mb-8 text-center">
    <h3 class="text-xl font-medium text-gray-700 my-0">Tagged with</h3>
    <h1 class="text-4xl font-medium leading-normal mt-0">{{ paged.tagProjet | capitalize }}</h1>
</div>
<div class="flex flex-wrap -mx-2">
    {% include "partials/projet-grid.njk" %}
</div>

{% if collections.tagList[paged.tagProjet] > site.paginate %}
{% include "partials/paginator.njk" %}
{% endif %}